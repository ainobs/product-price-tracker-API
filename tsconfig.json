{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"]  // Add 'jest' here
  },
  "include": [
    "src/**/*.ts",  // Ensure your TypeScript files are included
    "__tests__/**/*.ts"
  ]
}
